{
  "name": "metalsmith-taxonomy",
  "version": "0.4.0",
  "description": "Metalsmith plugin that organizes files into taxonomy trees in global metadata and auto-generates taxonomy page objects",
  "homepage": "https://github.com/webketje/metalsmith-taxonomy#readme",
  "bugs": "https://github.com/webketje/metalsmith-taxonomy/issues",
  "license": "LGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/webketje/metalsmith-taxonomy.git"
  },
  "keywords": [
    "metalsmith",
    "metalsmith-plugin",
    "taxonomy",
    "taxonomies",
    "categories",
    "tags"
  ],
  "author": "Kevin Van Lierde (https://webketje.com)",
  "engines": {
    "node": ">=8.6"
  },
  "main": "lib/index.js",
  "scripts": {
    "changelog": "auto-changelog -l false -u --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "test": "nyc ospec",
    "format": "prettier --write .",
    "lint": "eslint .",
    "release": "release-it",
    "codecov": "nyc report --reporter=text-lcov > ./coverage.info && cat ./coverage.info | node_modules/coveralls/bin/coveralls.js"
  },
  "directories": {
    "test": "./tests",
    "lib": "./lib"
  },
  "files": [
    "/lib/index.js",
    "/lib/taxonomy-set.js"
  ],
  "dependencies": {
    "debug": "^4.3.1",
    "micromatch": "^4.0.4"
  },
  "devDependencies": {
    "auto-changelog": "^2.3.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "metalsmith": "^2.3.0",
    "nyc": "^15.1.0",
    "ospec": "*",
    "prettier": "^2.5.1",
    "release-it": "^14.11.8"
  },
  "peerDependencies": {
    "metalsmith": "^2.3.0"
  }
}
